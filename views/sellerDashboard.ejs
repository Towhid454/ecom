<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Times New Roman Font -->
    <link href="https://fonts.googleapis.com/css2?family=Times+New+Roman&display=swap" rel="stylesheet">

</head>

<body class="font-serif bg-gray-50">

    <!-- Header Section -->
    <section class="bg-blue-600 text-white py-6">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-semibold">Seller Dashboard</h1>
        </div>
    </section>

    <!-- Main Content Section -->
    <div class="container mx-auto px-4 py-6">
        <div class="text-center mb-8">
            <h2 class="text-2xl font-semibold text-gray-800">Welcome, <%= user.email %></h2>
            <p class="mt-1 text-sm text-gray-600">Your Role: <strong><%= user.role %></strong></p>
        </div>

        <!-- Add New Product Button -->
        <div class="text-center mb-8">
            <a href="/seller/products" class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-md text-lg font-medium hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-opacity-50 transition duration-300">
                Add New Product
            </a>
        </div>

        <!-- Products List Section -->
        <div class="space-y-8">
            <h3 class="text-xl font-medium text-gray-800 mb-4">Your Products</h3>

            <% if (products.length > 0) { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% products.forEach(product => { %>
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-transparent hover:border-indigo-500 focus-within:border-indigo-500 focus-within:ring-2 focus-within:ring-indigo-500">
                            <div class="p-4">
                                <div class="mb-4">
                                    <img src="<%= product.image %>" alt="<%= product.p_title %>" class="w-full h-48 object-cover rounded-md">
                                </div>
                                <h4 class="text-lg font-semibold text-gray-800"><%= product.p_title %></h4>
                                <p class="mt-2 text-sm text-gray-600"><strong>Price:</strong> $<%= product.price %></p>
                                <p class="mt-1 text-sm text-gray-600"><strong>Quantity:</strong> <%= product.quantity %></p>
                                <p class="mt-2 text-sm text-gray-500"><strong>Description:</strong> <%= product.desc.substring(0, 100) %>...</p>
                            </div>
                            <div class="bg-gray-50 px-4 py-3">
                                <a href="/products/<%= product.p_id %>" class="text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50 text-sm font-medium">
                                    View Details
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-gray-500 text-center">You haven't added any products yet.</p>
            <% } %>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-gray-100 py-6 mt-12">
        <div class="text-center text-sm text-gray-600">
            <p>Â© 2024 Seller Dashboard. All Rights Reserved.</p>
        </div>
    </footer>

</body>

</html>
